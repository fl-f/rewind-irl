@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

/* modern theme */
@font-face {
	font-family: 'Quicksand';
	src: url('/fonts/Quicksand.ttf');
	font-display: swap;
}

@font-face {
	font-family: 'Hotliner';
	src: url('/fonts/Hotliner.otf');
	font-display: swap;
}

@font-face {
	font-family: 'Overdrive';
	src: url('/fonts/Overdrive_Avenue.otf');
	font-display: swap;
}